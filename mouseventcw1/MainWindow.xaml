            <Rectangle x:Name = "leftdown" Fill = "Chartreuse" 
                MouseEnter = "OnMouseEnter" MouseLeave = "OnMouseLeave"  
                MouseMove = "OnMouseMove" MouseDown = "OnMouseDown" Height = "157" RenderTransformOrigin="-0.012,1.027" Width="389" Canvas.Left="1" Canvas.Top="276"/>
        </Canvas>
        <Canvas>
            <Rectangle x:Name = "rightup" Fill = "blue" 
                MouseEnter = "OnMouseEnter" MouseLeave = "OnMouseLeave"  
