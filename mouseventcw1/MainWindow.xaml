        </Canvas>
        <Canvas>
            <TextBlock x:Name = "txt1" Height = "31" 
                Width = "336" Canvas.Left="98" Canvas.Top="42" />
        </Canvas>
        <Canvas Width="800">
            <TextBlock x:Name = "txt2" Height = "31"  
                Width = "250" Canvas.Left="490" Canvas.Top="63" />
            <Canvas Canvas.Top="31">
                <TextBlock x:Name = "txt3" Height = "31"  
                    Width = "250" Canvas.Left="-2" Canvas.Top="74" />
            </Canvas>
        </Canvas>
    </StackPanel>
</Window>